{
  "name": "typescript-api-boilerplate",
  "version": "1.0.0",
  "description": "Experimental Typescript boilerplate of a REST API",
  "main": "index.js",
  "author": "Thomas Milox",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TommyStarK/REST-API-Node-Boilerplate.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:dev": "cross-env NODE_ENV=dev yarn run build",
    "build:prod": "cross-env NODE_ENV=production yarn run build",
    "clean": "rimraf dist",
    "dev": "NODE_ENV=dev npm-run-all clean build --parallel watch:build watch:server --print-label",
    "lint": "eslint \"src/**/*.ts\"",
    "start": "node -r ./tsconfig-paths.js ./dist/src/index.js",
    "test": "jest --coverage --config jest.config.js",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon  -r ./tsconfig-paths.js ./dist/src/index.js --watch ./dist"
  },
  "dependencies": {
    "body-parser": "^1.17.1",
    "cors": "^2.8.3",
    "express": "^4.15.2",
    "inversify": "^5.0.5",
    "jsonwebtoken": "^8.4.0",
    "mongodb": "^3.1.8",
    "multer": "^1.4.2",
    "mysql2": "^2.2.5",
    "reflect-metadata": "^0.1.13",
    "uniqid": "^5.0.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/mongodb": "^3.6.3",
    "@types/mysql2": "types/mysql2",
    "@types/node": "^12.12.14",
    "@types/request": "^2.48.3",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "codecov": "^3.7.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-loader": "^6.2.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  }
}
